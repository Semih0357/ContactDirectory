{% extends 'home/base.html.twig' %}
{% set active_page = 'contacts' %}
{% block title %}Nouvelle tâche{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row">
            <div class="contacts">
                <div class=" mb-5">
                    <h4>Créer un nouveau contact</h4>
                </div>
                      
                {{ form_start(form) }}  

                    <fieldset>
                        <a class="btn btn-primary float-end" href="{{ path("app_contact") }}">Retour</a>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="contat_name" class="form-label mt-4">Prénom</label>
                                {{ form_widget(form.firstname, { 'attr': {'class':'form-control', 'placeholder' : 'Prénom du contact'}}) }}
                            </div>

                            <div class="form-group col-md-6">
                                <label for="collabFinder" class="form-label mt-4">Nom </label>
                                {{ form_widget(form.lastname, { 'attr': {'class':'form-control', 'placeholder' : 'Nom du contact'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label mt-4" for="task_description">Téléphone</label>
                            {{ form_widget(form.phoneNumber, { 'attr': {'class':'form-control', 'placeholder' : 'Numéro de téléphone', 'name' : 'editordata'}}) }}

                        </div>


                        <button type="submit" class="btn btn-primary btn-lg float-end mt-3 col-md-4">Créer le contact</button>
                    </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
