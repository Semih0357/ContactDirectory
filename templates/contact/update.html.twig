{% extends 'home/base.html.twig' %}
{% set active_page = 'contacts' %}
{% block title %}Mis à jour du contact {% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="contacts">
            <div>
                <h4>Mon contact</h4>
            </div>
            
            {{ form_start(form) }}
                <fieldset>
                    <div class="row">
                        <div class="col-md-3">
                             <label for="contatc_name" class="form-label mt-4">Prénom</label>
                            {{ form_widget(form.firstname, { 'attr': {'class':'form-control', 'placeholder' : 'Prénom du contact'}}) }}
                        </div>
                        <div class="form-group col-md-3">
                            <label for="collabFinder" class="form-label mt-4">Nom </label>
                            {{ form_widget(form.lastname, { 'attr': {'class':'form-control', 'placeholder' : 'Nom du contact'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-label mt-3">Téléphone</label>
                        {{ form_widget(form.phoneNumber, { 'attr': {'class':'form-control', 'placeholder' : 'Numéro de téléphone', 'name' : 'editordata'}}) }}
                    </div>
                        
                    <br>
                        
                    <div class="form-group col-md-6">
                        <button type="submit" class="btn btn-primary float-end">Mettre à jour le contact</button>
                        <a class=" btn btn-primary " href="{{ path("app_contact") }}"><i class="fa-solid fa-chevron-left"></i> Retour </a>
                    </div> 
                        
                </fieldset>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
